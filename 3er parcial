#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "stdlib.h"
#include "math.h"
#define MAX 1000

using namespace std;

void cargar (double a[], int tamano);
void mostrar (double a[], int tamano);
int cercano (double a[], int n);
void fibonacci (int n);
void menu();
int opcion1 (double x, double y);
int opcion2 (int x, int y);
int opcion3 (double x);

void main ()
{
	int option, n;
	double v[MAX];
	do{
		cout<<"\t\t MENU \n\n";
		cout<<"1. Encontrar el mayor cercano\n\n";
		cout<<"2. Problemas matematicos \n\n";
		cout<<"3. Fibonacci\n\n";
		cout<<"O. Salir del programa\n\n";
		cout<<"Opcion: ";
		cin>>option;
		switch(option){
		case 1:
			cout<<"Introduzca el numero de elementos a comparar: ";
			cin>>n; 
			cargar (v, n);
			cercano (v, n);
			break;
		case 2:
			menu();
			break;
		case 3:
			cout<<"Ingrese hasta que numero quiere que aparezca su FIBONACCI: ";
			cin>>n;
			fibonacci(n);
			break;
		case 0:
			cout<<"Saliendo del programa";
			break;
		default: 
			break;
		}
		getch();
		system("cls");
	}while(option!=0);
	getch();
}

void cargar (double a[], int tamano){
	for(int i=0; i<tamano; i++){
		cout<<"a["<<i<<"] ";
		cin>>a[i];
	}
}
void mostrar (double a[], int tamano){
	for(int i=0; i<tamano; i++)
		cout<<"a["<<i<<"] "<<a[i]<<endl;
}
int cercano(double a[], int n){
	int cercanos;
	double x;
	cout<<"Introduzca que elemento comparar: ";
	cin>> x;
	cercanos=x;
	for(int i=0; i<n;i++)
		if((a[i]<cercanos) && (a[i]>n))
			cercanos=a[i];
	return cercanos;
}
void fibonacci(int n){
	double a[MAX], c=0;
	a[0]=0;
	a[1]=1;
	for(int i=2; i<MAX;i++)
		if(a[i]<n)
			c++;
	cout<<"Su serie hasta "<<n<<" es: \n";
	mostrar (a,c);
}
void menu(){
	int opcion;
	double x, y;
	do{
		cout<<"\t\t MENU \n\n";
		cout<<"1. Encontrar Raix cuadrada de x*x + y*y \n\n";
		cout<<"2. Encontrar module entre x % y\n\n";
		cout<<"3. Hallar seno de angulo en radianes\n\n";
		cout<<"O. Volver del programa\n\n";
		cout<<"Opcion: ";
		cin>>opcion;
		switch(opcion){
			case 1:
				cout<<"Ingrese el valor de x: ";
				cin>>x;
				cout<<"Ingrese el valor de y: ";
				cin>>y;
				opcion1(x,y);
				break;
			case 2:
				cout<<"Ingrese el valor de x: ";
				cin>>x;
				cout<<"Ingrese el valor de y: ";
				cin>>y;
				opcion2(x,y);
				break;
			case 3:
				cout<<"Ingrese el valor del angulo en radianes: ";
				cin>>x;
				opcion3(x);
				break;
			case 0:
				cout<<"Volviendo al menu anterior";
				break;
			default:
				break;
				}
			getch();
			system("cls");
		}while(opcion!=0);
	getch();
}
int opcion1 (double x, double y){
	return sqrt(pow(x,2)+pow(y,3));
}
int opcion2 (int x, int y){
	return x%y;
}
int opcion3 (double x){
	return sin(x/6.2432);
}
